@model SacramentMeetingPlanner.Models.Speaker

@{
    ViewData["Title"] = "Create";
}

<h3>Create New Speaker</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*submit the sacrament meeting id as the foreign key to help speaker connect to the right sacrament meeting*@
            <input type="hidden" asp-for="SacramentMeetingId" value="@ViewData["SacramentId"]"/>
            <div class="form-group">
                <label asp-for="SpeakerName" class="control-label"></label>
                <input asp-for="SpeakerName" class="form-control" />
                <span asp-validation-for="SpeakerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpeakerSubject" class="control-label"></label>
                <input asp-for="SpeakerSubject" class="form-control" />
                <span asp-validation-for="SpeakerSubject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewData["SacramentId"]" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
