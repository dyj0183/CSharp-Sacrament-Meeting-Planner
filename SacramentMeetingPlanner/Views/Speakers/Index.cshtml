@model IEnumerable<SacramentMeetingPlanner.Models.Speaker>

@{
    ViewData["Title"] = "Index";
}

<h1>Add Speaker(s) for this Sacrament Meeting</h1>

<p>
    <a asp-action="Create" asp-route-SacramentId=@ViewData["SacramentId"] class="btn btn-success">Create New</a>
    <a asp-controller="SacramentMeetings" asp-action="Index" class="btn btn-primary float-right">Return to Sacrament Meeting</a>
</p>
<table class="table table-dark table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpeakerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeakerSubject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerSubject)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SpeakerId" class="btn btn-primary btn-sm m-1">Edit</a> |
                @*<a asp-action="Details" asp-route-id="@item.SpeakerId" class="btn btn-primary btn-sm m-1">Details</a> |*@
                <a asp-action="Delete" asp-route-id="@item.SpeakerId" class="btn btn-primary btn-sm m-1">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
