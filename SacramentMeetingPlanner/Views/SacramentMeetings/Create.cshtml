@model SacramentMeetingPlanner.Models.SacramentMeeting

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Sacrament Meeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateOfMeeting" class="control-label"></label>
                <input asp-for="DateOfMeeting" class="form-control" />
                <span asp-validation-for="DateOfMeeting" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConductLeader" class="control-label"></label>
                <input asp-for="ConductLeader" class="form-control" />
                <span asp-validation-for="ConductLeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenHymn" class="control-label"></label>
                <input asp-for="OpenHymn" class="form-control" />
                <span asp-validation-for="OpenHymn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenPrayer" class="control-label"></label>
                <input asp-for="OpenPrayer" class="form-control" />
                <span asp-validation-for="OpenPrayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SacramentHymn" class="control-label"></label>
                <input asp-for="SacramentHymn" class="form-control" />
                <span asp-validation-for="SacramentHymn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusicalNumber" class="control-label"></label>
                <span>(Optional)</span>
                <input asp-for="MusicalNumber" class="form-control" />
                <span asp-validation-for="MusicalNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CloseHymn" class="control-label"></label>
                <input asp-for="CloseHymn" class="form-control" />
                <span asp-validation-for="CloseHymn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosePrayer" class="control-label"></label>
                <input asp-for="ClosePrayer" class="form-control" />
                <span asp-validation-for="ClosePrayer" class="text-danger"></span>
            </div>

            @*loop through all the added speakers for this sacrament meeting*@
            @*@foreach (var speaker in Model.Speakers)
            {
                <p>Speaker Name</p>
                <p>@Html.DisplayFor(speakers => speaker.SpeakerName)</p>
            }*@

            @*<a asp-controller="Speakers" class="btn btn-info mt-1 mb-3">Add Speaker</a>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
                <p class="text-info">Speaker(s) could be addded after creating a sacrament meeting.</p>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
